<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/titleTextDefaultColor"
        android:textSize="@dimen/font_size_normal"
        android:drawableRight="@drawable/level_filter"
        android:drawablePadding="@dimen/dimen_dp_8"
        android:maxLines="1"
        android:paddingLeft="@dimen/dimen_dp_2"
        android:paddingRight="@dimen/dimen_dp_2"
        android:ellipsize="end"
        android:gravity="center" />

</LinearLayout>
